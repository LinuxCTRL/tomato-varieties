<% 
const title = 'Error - Tomato Varieties Database';
const body = `
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    ${error || 'An Error Occurred'}
                </h4>
            </div>
            <div class="card-body">
                <p class="card-text">${message || 'Something went wrong. Please try again.'}</p>
                
                <div class="mt-4">
                    <h5>What you can do:</h5>
                    <ul>
                        <li>Go back to the <a href="/" class="text-decoration-none">home page</a></li>
